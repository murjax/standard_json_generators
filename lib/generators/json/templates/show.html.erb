<div class="flex flex-col items-center relative md:rounded-md bg-white shadow-md mb-10 p-2">
  <h2 class="text-2xl"><% @model_name %> Info</h2>
<% if @json_config["skip_authorization"] -%>
  <%%= link_to(edit_<%= @model_name_underscore %>_path(@<%= @model_name_underscore %>), class: "block absolute top-2 right-10 text-sm antialiased font-medium leading-normal text-blue-400", data: { test_id: "edit-link" }) do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
    </svg>
  <%% end %>
<% else -%>
  <%% if policy(@<%= model_name_underscore %>).edit? %>
    <%%= link_to(edit_<%= @model_name_underscore %>_path(@<%= @model_name_underscore %>), class: "block absolute top-2 right-10 text-sm antialiased font-medium leading-normal text-blue-400", data: { test_id: "edit-link" }) do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="m16.862 4.487 1.687-1.688a1.875 1.875 0 1 1 2.652 2.652L6.832 19.82a4.5 4.5 0 0 1-1.897 1.13l-2.685.8.8-2.685a4.5 4.5 0 0 1 1.13-1.897L16.863 4.487Zm0 0L19.5 7.125" />
      </svg>
    <%% end %>
  <%% end %>
<% end -%>
<% if @json_config["skip_authorization"] -%>
  <%%= link_to(
    <%= @model_name_underscore %>_path(@<%= @model_name_underscore %>),
    class: "block absolute top-2 right-2 text-sm antialiased font-medium leading-normal text-red-400",
    method: "delete",
    data: {
      turbo_method: :delete,
      turbo_confirm: "Are you sure?",
      test_id: "delete-link"
    }
  ) do %>
    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
      <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
    </svg>
  <%% end %>
<% else -%>
  <%% if policy(@<%= @model_name_underscore %>).destroy? %>
    <%%= link_to(
      <%= @model_name_underscore %>_path(@<%= @model_name_underscore %>),
      class: "block absolute top-2 right-2 text-sm antialiased font-medium leading-normal text-red-400",
      method: "delete",
      data: {
        turbo_method: :delete,
        turbo_confirm: "Are you sure?",
        test_id: "delete-link"
      }
    ) do %>
      <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
        <path stroke-linecap="round" stroke-linejoin="round" d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
      </svg>
    <%% end %>
  <%% end %>
<% end -%>
  <div class="w-3/4">
    <table
      class="w-full text-left table-auto min-w-max"
      data-test-id="<%= @model_name_underscore %>-info"
    >
      <tbody>
<% @columns.each do |column| -%>
        <tr>
          <td class="p-4 block md:table-cell">
            <p class="block text-sm antialiased font-bold leading-normal text-gray-400">
              <%= column["name"].titleize %>
            </p>
          </td>
          <td class="p-4 block md:table-cell">
            <p class="block text-sm antialiased font-normal leading-normal text-blue-gray-900">
<% if column["type"] == "reference" -%>
              <%%= @<%= @model_name_underscore %>.<%= column["name"] %>.<%= column["display_field"] %> %>
<% else -%>
              <%%= @<%= @model_name_underscore %>.<%= column["name"] %> %>
<% end -%>
            </p>
          </td>
        </tr>
<% end -%>
      </tbody>
    </table>
  </div>
</div>
